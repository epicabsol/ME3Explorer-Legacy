<global:WPFBase x:Class="ME3Explorer.Soundplorer.SoundplorerWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:global="clr-namespace:ME3Explorer"
        xmlns:local="clr-namespace:ME3Explorer.Soundplorer"
        mc:Ignorable="d"
        xmlns:Converters="clr-namespace:ME3Explorer.SharedUI.Converters"
        xmlns:SharedUI="clr-namespace:ME3Explorer.SharedUI"        
        Closing="Soundplorer_Closing"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Soundplorer" Height="450" Width="830">
    <Window.Resources>
        <Converters:BoolToCollapsedVisibilityConverter x:Key="BoolToCollapsedVisibilityConverter"/>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="Open" Executed="OpenCommandBinding_Executed"/>
        <CommandBinding Command="Save" Executed="SaveCommandBinding_Executed"/>
        <CommandBinding Command="SaveAs" Executed="SaveAsCommandBinding_Executed"/>
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Control" Command="Open"/>
        <KeyBinding Key="S" Modifiers="Control" Command="Save"/>
        <KeyBinding Key="S" Modifiers="Control+Shift" Command="SaveAs"/>
    </Window.InputBindings>
    <xctk:BusyIndicator IsBusy="{Binding Path=IsBusy}" BusyContent="{Binding BusyText}">
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File"  Padding="4">
                    <MenuItem Header="_Open" Command="Open" InputGestureText="Ctrl+O"/>
                    <MenuItem Header="_Save" Command="Save" InputGestureText="Ctrl+S"/>
                    <MenuItem Header="_Save as" Command="SaveAs" InputGestureText="Ctrl+Shift+S"/>
                    <Separator/>
                    <MenuItem Name="Recents_MenuItem" Header="Recent" IsEnabled="false"/>
                </MenuItem>
                <MenuItem Header="_Wwise">
                    <MenuItem Header="Extract Bank file" Click="ExtractBank_Clicked"/>
                    <MenuItem Header="Extract WEMs from bank" Click="ExtractWEMFromBank_Clicked"/>
                    <MenuItem Header="Compact a DLC mod AFC" Click="CompactAFC_Clicked"/>

                </MenuItem>
            </Menu>
            <StatusBar Height="23" DockPanel.Dock="Bottom">
                <StatusBarItem VerticalContentAlignment="Center" Name="StatusBar_GameID_Container" Visibility="Collapsed">
                    <Border BorderBrush="Gray" BorderThickness="2,2,2,2" CornerRadius="3,3,3,3" VerticalAlignment="Center">
                        <TextBlock Name="StatusBar_GameID_Text" Background="Red" Text="Game ID" FontSize="11" Foreground="White" Padding="4,3,4,3" FontFamily="Consolas" VerticalAlignment="Center"/>
                    </Border>
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock Name="StatusBar_LeftMostText" Text="Soundplorer WPF is currently in beta - not everything works right now!"/>
                </StatusBarItem>
            </StatusBar>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ListBox Name="SoundExports_ListBox" Grid.Column="0" SelectionChanged="SoundExports_ListBox_SelectionChanged" ItemsSource="{Binding BindedExportList}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <StackPanel.Style>
                                    <Style TargetType="{x:Type StackPanel}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShouldHighlightAsChanged}" Value="true">
                                                <Setter Property="Background" Value="Yellow"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <SharedUI:LoadingSpinner EllipseSize="4" HorizontalAlignment="Left" Margin="0,0,10,5" Height="16" Width="16" Visibility="{Binding Path=DataContext.Loaded, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToCollapsedVisibilityConverter}}"/>
                                <Image Grid.Column="7" Source="/soundplorer/volume.png" Height="16" Width="16" Margin ="4" Visibility="{Binding Path=DataContext.HideSoundIcon, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToCollapsedVisibilityConverter}}"/>
                                <TextBlock Text="{Binding DisplayString}" VerticalAlignment="Center"/>
                            </StackPanel>

                            <!--
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="18" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Text="{Binding DisplayString}" />
                        </Grid>-->
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <GridSplitter Grid.Column="1"
                  Margin="-3,0"
                  BorderThickness="3,0"
                  BorderBrush="Transparent"
                  HorizontalAlignment="Stretch" />
                <global:Soundpanel x:Name="soundPanel" Grid.Column="2"/>
            </Grid>
        </DockPanel>
    </xctk:BusyIndicator>
</global:WPFBase>
